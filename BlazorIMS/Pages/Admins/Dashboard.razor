@page "/admins"
@attribute [Authorize(Roles = "Admins")]

<!-- Is it possible to combine the two Dashboard.razor files so you only change the names in one place? similarly as in NavMenu.razor with the AuthorizeView -->

<PageTitle>@_title</PageTitle>
<h3>@_title</h3>
<hr />

<style>
    .btn {
        height: 150px;
    }

        .btn div {
            padding-top: 60px;
        }
</style>

<div class="row">
    <div class="col-md-4">
        <div class="d-grid m-3">
            <a class="btn btn-primary" href="inventories">
                <div>
                    <span class="oi oi-list" aria-hidden="true"></span>
                    Inventory
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="d-grid m-3">
            <a class="btn btn-warning" href="qrscanner/checkout">
                <div>
                    <span class="oi oi-camera-slr" aria-hidden="true"></span>
                    Check out item
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="d-grid m-3">
            <a class="btn btn-success" href="/qrscanner/checkin">
                <div>
                    <span class="oi oi-camera-slr" aria-hidden="true"></span>
                    Return item
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="d-grid m-3">
            <a class="btn btn-secondary" href="inventories/checkouts">
                <div>
                    <span class="oi oi-list" aria-hidden="true"></span>
                    Checked out items
                </div>
            </a>
        </div>
    </div>
    <div class="col-md-4">
        <div class="d-grid m-3">
            <a class="btn btn-outline-dark" href="readexcel">
                <div>
                    <span class="oi oi-data-transfer-upload" aria-hidden="true"></span>
                    Read Excel
                </div>
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-grid m-3">
            <a class="btn btn-outline-info" href="users">
                <div>
                    <span class="oi oi-person" aria-hidden="true"></span>
                   Users
                </div>
            </a>
        </div>
    </div>

    <div class="col-md-4">
        <div class="d-grid m-3">
            <a class="btn btn-outline-danger" href="roles">
                <div>
                    <span class="oi oi-people" aria-hidden="true"></span>
                    Roles
                </div>
            </a>
        </div>
    </div>
</div>


@code {
    private string _title = "Dashboard Admins";
}